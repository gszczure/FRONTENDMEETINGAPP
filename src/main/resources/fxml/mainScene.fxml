        <Label contentDisplay="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="26.0" prefWidth="278.0" text="Join Meeting" AnchorPane.leftAnchor="13.0" AnchorPane.rightAnchor="13.0" AnchorPane.topAnchor="30.0">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="meetingCodeTextField" promptText="Enter meeting code" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="100.0" />
        <Button fx:id="joinButton" onAction="#handleJoinButtonAction" prefHeight="26.0" prefWidth="56.0" style="-fx-background-color: #263F73;" text="Join" textFill="WHITE" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="20.0" />
        <Button fx:id="cancelButton" onAction="#handleCancelButtonAction" prefHeight="26.0" prefWidth="64.0" style="-fx-background-color: #263F73;" text="Cancel" textFill="WHITE" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="20.0" />
        <Label fx:id="messageLabel" contentDisplay="CENTER" layoutX="10.0" layoutY="200.0" prefHeight="26.0" prefWidth="230.0" text="" textFill="RED" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" />
    </AnchorPane>
</AnchorPane>
