<AnchorPane prefHeight="496.0" prefWidth="613.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.meetingapp.frontendtest.controller.MainSceneController">
    <!-- VBox dla Accordion -->
    <VBox alignment="CENTER" layoutX="38.0" layoutY="153.0" prefHeight="234.0" prefWidth="336.0" spacing="20" AnchorPane.bottomAnchor="109.0" AnchorPane.leftAnchor="11.0" AnchorPane.rightAnchor="266.0" AnchorPane.topAnchor="153.0">
        <Accordion fx:id="accordion" />
    </VBox>

    <Button fx:id="logoutButton" layoutX="14.0" layoutY="10.0" onAction="#handleLogoutButtonAction" style="-fx-background-color: #263F73;" text="Logout" textFill="WHITE" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />

    <Button fx:id="addMeetingButton" layoutX="578.0" layoutY="10.0" onAction="#handleCreateMeetingButtonAction" style="-fx-background-color: #263F73;" text="Add Meeting" textFill="WHITE" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />

    <Button fx:id="jointMeetingButton" layoutX="515.0" layoutY="47.0" mnemonicParsing="false" onAction="#handleJoinMeetingButtonAction" style="-fx-background-color: #263F73;" text="Join Meeting" textFill="WHITE" AnchorPane.rightAnchor="10.0" />

    <!-- Wysuwane okno dołączania spotkania -->
    <AnchorPane fx:id="slideInPane" prefHeight="496.0" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #000000;" visible="false" AnchorPane.rightAnchor="0.0">
